    "@nestia/fetcher": "^9.1.1",
    "@nestia/sdk": "^9.1.1",
    "@nestjs/common": "^11.0.1",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-fastify": "^11.1.9",
    "@nestjs/throttler": "^6.5.0",
    "@prisma/adapter-pg": "^7.1.0",
    "@prisma/client": "^7.1.0",
    "firebase-admin": "^13.6.0",
    "genkit": "^1.25.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "typia": "^10.1.0",
    "zod": "^4.1.13"
